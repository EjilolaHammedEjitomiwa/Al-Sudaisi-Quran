<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<EditText
    android:id="@+id/add_video_recitation_title"
    android:layout_width="match_parent"
    android:hint="Title"
    android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/add_video_recitation_thumbnail"
        android:layout_width="match_parent"
        android:hint="thumbnail"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/add_video_recitation_link"
        android:layout_width="match_parent"
        android:hint="link"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="Add"
        android:id="@+id/add_video_recitation_addBtn"
        android:layout_height="wrap_content" />
</LinearLayout>